{
  "_comment": "WuXing-Agent 五行智能体框架 — 集中配置文件",

  "models": {
    "reasoning": "my-chat",
    "sensing":   "my-chat",
    "vision":    "my-chat",
    "dream":     "my-chat",
    "embedding": "BAAI/bge-m3"
  },

  "temperature": {
    "reasoning": 0.7,
    "sensing":   0.0,
    "dream":     0.3
  },

  "memory": {
    "lambda":              0.005,
    "semanticPreFilter":   0.65,
    "entropyTriggerEvery": 10,
    "dreamMinDocs":        4,
    "topK":                5,
    "contextMinScore":     0.30
  },

  "scoring": {
    "_comment":         "三因子加权：相似度(阳) + 时效(流年) + 置信(道行)，权重之和应为1",
    "similarityWeight": 0.5,
    "timeDecayWeight":  0.2,
    "confidenceWeight": 0.3,
    "recallThreshold":  0.55,
    "minConfidence":    0.10
  },

  "reflection": {
    "_comment":          "金节点质量门禁：qualityThreshold 入内丹；securityThreshold 安全场景更宽松；skillThreshold 触发自写技能",
    "qualityThreshold":  72,
    "securityThreshold": 52,
    "skillThreshold":    85
  },

  "evolution": {
    "dreamTriggerEvery":   3,
    "pairwiseMaxDocs":     8,
    "logFile":             "logs/evolution.log"
  },

  "debate": {
    "synthesisMaxWords": 100
  },

  "tools": {
    "_comment":           "火节点工具调用：maxCycles 防无限循环，executionTimeoutMs 工作区超时",
    "maxCycles":          25,
    "executionTimeoutMs": 30000,
    "workspaceDir":       "workspace",
    "_pythonComment":     "技能脚本首选语言。Windows 通常是 python，Linux/Mac 是 python3",
    "pythonCmd":          "python"
  },

  "repl": {
    "_comment":        "交互模式参数：dreamIntervalMs 后台梦境周期，sessionWindowSize 多轮上下文保留轮数",
    "dreamIntervalMs":   1800000,
    "sessionWindowSize": 6
  },

  "session": {
    "_comment":          "持久化会话管理：跨进程断点续接 + 自动 LLM 摘要压缩（防 Token 爆炸）",
    "persistFile":       "data/sessions/current.json",
    "maxMessages":       40,
    "summaryKeepRecent": 10
  }
}
