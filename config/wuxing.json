{
  "_comment": "WuXing-Agent 五行智能体框架 — 集中配置文件",

  "models": {
    "reasoning": "my-chat",
    "sensing":   "my-chat",
    "vision":    "my-chat",
    "dream":     "my-chat",
    "embedding": "BAAI/bge-m3"
  },

  "temperature": {
    "reasoning": 0.7,
    "sensing":   0.0,
    "dream":     0.3
  },

  "memory": {
    "lambda":              0.005,
    "semanticPreFilter":   0.65,
    "entropyTriggerEvery": 10,
    "dreamMinDocs":        4
  },

  "scoring": {
    "_comment":         "三因子加权：相似度(阳) + 时效(流年) + 置信(道行)，权重之和应为1",
    "similarityWeight": 0.5,
    "timeDecayWeight":  0.2,
    "confidenceWeight": 0.3,
    "recallThreshold":  0.55,
    "minConfidence":    0.10
  },

  "reflection": {
    "_comment":       "金节点质量门禁：score >= qualityThreshold 才入库",
    "qualityThreshold": 72
  },

  "evolution": {
    "dreamTriggerEvery":   3,
    "pairwiseMaxDocs":     8,
    "logFile":             "logs/evolution.log"
  },

  "debate": {
    "synthesisMaxWords": 100
  },

  "tools": {
    "_comment":          "火节点工具调用：maxCycles 防无限循环，executionTimeoutMs 沙箱超时",
    "maxCycles":         5,
    "executionTimeoutMs": 10000,
    "sandboxDir":        "data/sandbox"
  }
}
